<!DOCTYPE html>
<html>
  <head>
    <title>Events</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:700|Gloria+Hallelujah|Patrick+Hand+SC|Walter+Turncoat" rel="stylesheet">
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js" integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ" crossorigin="anonymous"></script>
    <script>$('.carousel.carousel-slider').carousel({fullWidth: true});</script>

    <script>
      $(document).ready(function(){
      $('.slider').slider({
        indicators: true
      });
    });
    </script>
  </head>
    <div id="holder">
      <header>
          <%= render 'shared/application_nav' %>
      </header>

      <body>

        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>

        <div class="container">
          <%= yield %>
        </div>

      </body>

      <footer>
        <%= render 'shared/application_footer' %>
      </footer>
    </div>

</html>