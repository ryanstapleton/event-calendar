<div class="card card-main">
  <div class="headings">
    <h1>EVENTS CALENDAR</h1>
  </div>
  <hr>

  <div class="row text-center">
    <div class="col-12">
      <div class="calendar">
        <iframe src="https://calendar.google.com/calendar/embed?showPrint=0&amp;height=600&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=bottegaevents%40gmail.com&amp;color=%231B887A&amp;ctz=America%2FDenver" style="border-width:0" width="100%" height="100%" frameborder="0" scrolling="no"></iframe>
      </div>
    </div>
  </div>

  <hr>
  <div class="headings">  
    <h2>UPCOMING EVENTS</h2>
  </div>
  <hr>

  <% if @events.empty? %>
    <div class="indentions">
      <p>Stay tuned for upcoming events!</p>
    </div>
  <% else %>
      <%= render partial: 'shared/cards', locals: {events: @events, button_partial: 'shared/buttons'} %>
  <% end %>
</div>


