<div class="card card-main">
  <div class="headings">
    <h1>Events Calendar</h1>
    <hr>
  </div>

  <div class="row text-center">

      <div class="col-12 calendar">
        <iframe src="https://calendar.google.com/calendar/embed?src=bottegaevents%40gmail.com&ctz=America%2FDenver" style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
      </div>
    </div>

  <div class="headings text-center">  
    <h2>Upcoming Events</h2>
  </div>
  <div class="row justify-content-center">

    <% @events.each do |event| %>
      <div class="card card-custom">
        <div class="row">

          <div class="col-2">
            <%= image_tag event.main_image, class: "thumb-image" %>            
          </div>

          <div class="col-7 content-center">
            <h3><%= link_to truncate(event.title.titleize, length: 25), event, class: "card-heading" %></h3>
            <hr>
            <span style="color: #3AE39F">When: &nbsp;&nbsp;</span><%= event.date.strftime("%A, %B %Y") %> 
            <br>
            <span style="color: #3AE39F">Where: &nbsp;</span><%= event.location %>
          </div>

          <div class="col-2">
            <%= render partial: 'shared/buttons', locals: {event: event} %>
          </div>

        </div> <!-- Row -->
      </div> <!-- Card -->
    <% end %>

  </div>
