<div class="card card-main">
  <div class="headings">
    <div class="row">
      <div class="col-9">
        <h1>Dashboard</h1>
        <p>Welcome <%= current_user.name %></p>
      </div>
      <div class="col-3 text-right">
        <p>Your Events: <%= current_user.events.count %></p>
        <p>Your Rsvps: <%= current_user.rsvps.count %></p>
        <p>Your Favorites: <%= current_user.favorites.count %></p>
      </div>
    </div>
  </div>
  <hr>

  <div>
    <div class="headings text-center">  
      <h2>My Events</h2>
    </div>
    <div class="row justify-content-center">

      <% @events.each do |event| %>
        <div class="card card-custom">
          <div class="row">

            <div class="col-2">
              <%= image_tag event.main_image, width: 100, height: 100 %>            
            </div>

            <div class="col-7 content-center">
              <h3><%= link_to truncate(event.title.titleize, length: 25), event, class: "card-heading" %></h3>
              <hr>
              <span style="color: #3AE39F">When: &nbsp;&nbsp;</span><%= event.date.strftime("%A, %B %Y") %> 
              <br>
              <span style="color: #3AE39F">Where: &nbsp;</span><%= event.location %>
            </div>

            <div class="col-2">
              <%= render partial: 'shared/buttons', locals: {event: event} %>
            </div>

          </div> <!-- Row -->
        </div> <!-- Card -->
      <% end %>

    </div>
  </div>

  <div>
    <div class="headings text-center">  
      <h2>My RSVPS</h2>
    </div>
    <div class="row justify-content-center">

      <% @rsvps.each do |rsvp| %>
        <div class="card card-custom">
          <div class="row">

            <div class="col-2">
              <%= image_tag rsvp.event.main_image, width: 100, height: 100 %>            
            </div>

            <div class="col-7 content-center">
              <h3><%= link_to truncate(rsvp.event.title.titleize, length: 25), rsvp.event, class: "card-heading" %></h3>
              <hr>
              <span style="color: #3AE39F">When: &nbsp;&nbsp;</span><%= rsvp.event.date.strftime("%A, %B %Y") %> 
              <br>
              <span style="color: #3AE39F">Where: &nbsp;</span><%= rsvp.event.location %>
            </div>

            <div class="col-2">
              <%= render partial: 'shared/buttons', locals: {event: rsvp.event} %>
            </div>

          </div> <!-- Row -->
        </div> <!-- Card -->
      <% end %>

    </div>
  </div>

  <div>
    <div class="headings text-center">  
      <h2>My Favorites</h2>
    </div>
    <div class="row justify-content-center">

      <% @favorites.each do |favorite| %>
        <div class="card card-custom">
          <div class="row">

            <div class="col-2">
              <%= image_tag favorite.event.main_image, width: 100, height: 100 %>            
            </div>

            <div class="col-7 content-center">
              <h3><%= link_to truncate(favorite.event.title.titleize, length: 25), favorite.event, class: "card-heading" %></h3>
              <hr>
              <span style="color: #3AE39F">When: &nbsp;&nbsp;</span><%= favorite.event.date.strftime("%A, %B %Y") %> 
              <br>
              <span style="color: #3AE39F">Where: &nbsp;</span><%= favorite.event.location %>
            </div>

            <div class="col-2">
              <%= render partial: 'shared/buttons', locals: {event: favorite.event} %>
            </div>

          </div> <!-- Row -->
        </div> <!-- Card -->
      <% end %>

    </div>
  </div>
</div>