<div class="card card-main">
  <div class="headings">
    <div class="row">
      <div class="col-9">
        <h1>Admin Dashboard</h1>
        <p>Welcome <%= current_user.name %></p>
      </div>
      <div class="col-3 text-right">
        <p>Pending Events: <%= @pending_events.count %></p>
        <p>Approved Events: <%= @approved_events.count %></p>
      </div>
    </div>
  </div>
  <hr>

  <div>
    <div class="headings text-center">  
      <h2>Pending Events</h2>
    </div>
    <div class="row justify-content-center">

      <% @pending_events.each do |event| %>
        <div class="card card-custom">
          <div class="row">

            <div class="col-2 thumb-image">
              <%= image_tag event.main_image, width: 100, height: 100 %>            
            </div>

            <div class="col-7 content-center">
              <h3><%= link_to truncate(event.title.titleize, length: 25), event, class: "card-heading" %></h3>
              <hr>
              <span style="color: #3AE39F">When: &nbsp;&nbsp;</span><%= event.date.strftime("%A, %B %Y") %> 
              <br>
              <span style="color: #3AE39F">Where: &nbsp;</span><%= event.location %>
            </div>

            <div class="col-2">
              <%= render partial: 'shared/buttons', locals: {event: event} %>
            </div>

          </div> <!-- Row -->
        </div> <!-- Card -->
      <% end %>

    </div>
  </div>

  <div>
    <div class="headings text-center">  
      <h2>Approved Events</h2>
    </div>
    <div class="row justify-content-center">

      <% @approved_events.each do |event| %>
        <div class="card card-custom">
          <div class="row">

            <div class="col-2 thumb-image">
              <%= image_tag event.main_image, width: 100, height: 100 %>            
            </div>

            <div class="col-7 content-center">
              <h3><%= link_to truncate(event.title.titleize, length: 25), event, class: "card-heading" %></h3>
              <hr>
              <span style="color: #3AE39F">When: &nbsp;&nbsp;</span><%= event.date.strftime("%A, %B %Y") %> 
              <br>
              <span style="color: #3AE39F">Where: &nbsp;</span><%= event.location %>
            </div>

            <div class="col-2">
              <%= render partial: 'shared/buttons', locals: {event: event} %>
            </div>

          </div> <!-- Row -->
        </div> <!-- Card -->
      <% end %>

    </div>
  </div>
</div>
